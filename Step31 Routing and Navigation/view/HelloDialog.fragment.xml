<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Dialog
		title="Hello {/recipient/name}">
		<content>
			<core:Icon
				src="sap-icon://helloWorld"
				size="8rem"
				class="sapUiMediumMargin"
			/>
		</content>
		<buttons>
			<Button
				text="{i18n>dialogCloseButtonText}001"
				press="onCloseDialog"
			/>
			<Button
				text="{i18n>dialogCloseButtonText}002"
				press="onCloseDialog"
			/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>